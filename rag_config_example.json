{
  "agents": {
    "defaults": {
      "workspace": "~/.nanobot/workspace",
      "model": "anthropic/claude-opus-4-5",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20,
      
      // RAG configuration - 新增的RAG配置字段
      "embedding_model": "~/.nanobot/models/models--BAAI--bge-large-zh-v1.5",
      "chunk_size": 500,
      "chunk_overlap": 100,
      "top_k": 5,
      "similarity_threshold": 0.0,
      "batch_size": 32,
      "timeout": 5
    }
  },
  "providers": {
    "anthropic": {
      "api_key": "your-anthropic-api-key-here"
    }
  },
  "channels": {
    "whatsapp": {
      "enabled": false
    },
    "telegram": {
      "enabled": false
    },
    "discord": {
      "enabled": false
    },
    "feishu": {
      "enabled": false
    },
    "mochat": {
      "enabled": false
    },
    "dingtalk": {
      "enabled": false
    },
    "email": {
      "enabled": false
    },
    "slack": {
      "enabled": false
    },
    "qq": {
      "enabled": false
    }
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  },
  "tools": {
    "web": {
      "search": {
        "api_key": "",
        "max_results": 5
      }
    },
    "exec": {
      "timeout": 60
    },
    "restrict_to_workspace": false
  },
  "mcp": {
    "servers": {},
    "auto_discover": true,
    "discovery_path": "~/.mcp/servers"
  }
}